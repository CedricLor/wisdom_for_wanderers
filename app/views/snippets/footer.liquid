<div class="clearfix"></div>
<div class="footer">
  <p>
    &copy; {{ site.name | escape }} {{ now | localized_date: '%Y' }}
    {% for locale_string in locales %}
      {% unless locale_string == locale %}
        | <a href="/{{ locale_string }}">
          {% if locale_string != "zh-CN" %}
            {{ locale_string | translate }}
          {% else %}
            中文
          {% endif %}
          </a>
      {% endunless %}
    {% endfor %}
  </p>
</div>
